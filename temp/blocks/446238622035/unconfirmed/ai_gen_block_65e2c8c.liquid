    },
    {
      "type": "range",
      "id": "padding",
      "min": 20,
      "max": 100,
      "step": 10,
      "unit": "px",
      "label": "Padding",
      "default": 60
    }
  ],
  "presets": [
    {
      "name": "Image filled text"
    }
  ],
  "tag": null
}
{% endschema %}