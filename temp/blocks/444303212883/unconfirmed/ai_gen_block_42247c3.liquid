{% doc %}
  @prompt
    Generate a testimonials section with 3 customer reviews. Include star ratings, customer photo placeholders, and short review text. Style it soft, elegant, and trustworthy.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-testimonials-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-testimonials-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-testimonials-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 48px;
  }

  .ai-testimonials-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 16px;
    font-weight: 600;
  }

  .ai-testimonials-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0;opacity: 0.8;
  }

  .ai-testimonials-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 32px;
    margin-top: 48px;
  }

  .ai-testimonial-card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    padding: 32px 24px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, {{ block.settings.card_shadow_opacity | divided_by: 100.0 }});
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .ai-testimonial-card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, {{ block.settings.card_shadow_opacity | times: 1.5 | divided_by: 100.0 }});
  }

  .ai-testimonial-rating-{{ ai_gen_id }} {
    display: flex;
    gap: 4px;
    margin-bottom: 20px;
    justify-content: center;
  }

  .ai-testimonial-star-{{ ai_gen_id }} {
    width: {{ block.settings.star_size }}px;
    height: {{ block.settings.star_size }}px;
    color: {{ block.settings.star_color }};
  }

  .ai-testimonial-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.review_text_size }}px;
    line-height: 1.6;
    color: {{ block.settings.review_text_color }};
    margin-bottom: 24px;
    text-align: center;
    font-style: italic;
  }

  .ai-testimonial-customer-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 12px;
  }

  .ai-testimonial-photo-{{ ai_gen_id }} {
    width: {{ block.settings.photo_size }}px;
    height: {{ block.settings.photo_size }}px;
    border-radius: 50%;
    overflow: hidden;
    background-color: {{ block.settings.photo_placeholder_color }};
    display: flex;
    align-items: center;
    justify-content: center;
    border: 3px solid {{ block.settings.photo_border_color }};
  }

  .ai-testimonial-photo-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    color: {{ block.settings.photo_icon_color }};
  }

  .ai-testimonial-name-{{ ai_gen_id }} {
    font-size: {{ block.settings.name_size }}px;
    font-weight: 600;
    color: {{ block.settings.name_color }};
    margin: 0;
  }

  .ai-testimonial-location-{{ ai_gen_id }} {
    font-size: {{ block.settings.location_size }}px;
    color: {{ block.settings.location_color }};
    margin: 0;opacity: 0.7;
  }

  .ai-testimonial-quote-{{ ai_gen_id }} {
    position: absolute;
    top: 16px;
    right: 20px;
    width: 32px;
    height: 32px;
    color: {{ block.settings.quote_color }};
    opacity: 0.1;
  }

  @media screen and (max-width: 768px) {
    .ai-testimonials-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 24px;
    }

    .ai-testimonial-card-{{ ai_gen_id }} {
      padding: 24px20px;
    }

    .ai-testimonials-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }

    .ai-testimonials-subtitle-{{ ai_gen_id }} {
      font-size: {{ block.settings.subtitle_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<testimonials-section-{{ ai_gen_id }}
  class="ai-testimonials-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-testimonials-container-{{ ai_gen_id }}">
    {% if block.settings.title != blank or block.settings.subtitle != blank %}
      <div class="ai-testimonials-header-{{ ai_gen_id }}">
        {% if block.settings.title != blank %}
          <h2 class="ai-testimonials-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
        {% endif %}
        {% if block.settings.subtitle != blank %}
          <p class="ai-testimonials-subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-testimonials-grid-{{ ai_gen_id }}">
      {% for i in (1..3) %}
        {% liquid
          assign review_key = 'review_' | append: i
          assign name_key = 'name_' | append: i
          assign location_key = 'location_' | append: i
          assign rating_key = 'rating_' | append: i

          assign review_text = block.settings[review_key]
          assign customer_name = block.settings[name_key]
          assign customer_location = block.settings[location_key]
          assign rating = block.settings[rating_key]
        %}

        <div class="ai-testimonial-card-{{ ai_gen_id }}">
          <svg class="ai-testimonial-quote-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="currentColor">
            <path d="M14,17H17L19,13V7H13V13H16M6,17H9L11,13V7H5V13H8L6,17Z" />
          </svg>

          <div class="ai-testimonial-rating-{{ ai_gen_id }}">
            {% for star in (1..5) %}
              <svg class="ai-testimonial-star-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="{% if star <= rating %}currentColor{% else %}none{% endif %}" stroke="currentColor" stroke-width="1">
                <polygon points="12,2 15.09,8.26 22,9.27 17,14.14 18.18,21.02 12,17.77 5.82,21.02 7,14.14 2,9.27 8.91,8.26" />
              </svg>
            {% endfor %}
          </div>

          {% if review_text != blank %}
            <p class="ai-testimonial-text-{{ ai_gen_id }}">{{ review_text }}</p>
          {% else %}
            <p class="ai-testimonial-text-{{ ai_gen_id }}" style="color: #999; font-style: normal;">Add a customer review for testimonial {{ i }}</p>
          {% endif %}

          <div class="ai-testimonial-customer-{{ ai_gen_id }}">
            <div class="ai-testimonial-photo-{{ ai_gen_id }}">
              <svg viewBox="0 0 24 24" fill="currentColor">
                <path d="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z" />
              </svg>
            </div>
            {% if customer_name != blank %}
              <h3 class="ai-testimonial-name-{{ ai_gen_id }}">{{ customer_name }}</h3>
            {% else %}
              <h3 class="ai-testimonial-name-{{ ai_gen_id }}" style="color: #999;">Customer name</h3>
            {% endif %}
            {% if customer_location != blank %}
              <p class="ai-testimonial-location-{{ ai_gen_id }}">{{ customer_location }}</p>
            {% else %}
              <p class="ai-testimonial-location-{{ ai_gen_id }}" style="color: #999;">Customer location</p>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</testimonials-section-{{ ai_gen_id }}>

<script>
  (function() {
    class TestimonialsSection{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.setupAnimations();
      }

      setupAnimations() {
        const cards = this.querySelectorAll('.ai-testimonial-card-{{ ai_gen_id }}');
        const observer = new IntersectionObserver((entries) => {
          entries.forEach((entry, index) => {
            if (entry.isIntersecting) {
              setTimeout(() => {
                entry.target.style.opacity = '1';
                entry.target.style.transform = 'translateY(0)';
              }, index * 100);
            }
          });
        }, {
          threshold: 0.1,rootMargin: '0px 0px -50px 0px'
        });

        cards.forEach((card) => {
          card.style.opacity = '0';
          card.style.transform = 'translateY(20px)';
          card.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
          observer.observe(card);
        });
      }
    }

    customElements.define('testimonials-section-{{ ai_gen_id }}', TestimonialsSection{{ ai_gen_id }});
  })();
</script>

